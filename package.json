{
  "name": "vibe-basket",
  "version": "1.0.0",
  "description": "E-commerce platform with AI features",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "test": "npm run test:unit && npm run test:frontend",
    "test:unit": "cd backend && npm run test:unit",
    "test:integration": "bash scripts/test-integration.sh",
    "test:integration:run": "cd backend && npm run test:integration",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "node scripts/run-e2e.js",
    "test:all": "npm run test && npm run test:e2e",
    "test:full": "npm run test:unit && npm run test:integration && npm run test:frontend && npm run test:e2e"
  },
  "keywords": [
    "ecommerce",
    "nextjs",
    "nestjs",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "concurrently": "^8.2.2"
  }
}
